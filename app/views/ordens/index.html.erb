<p id="notice"><%= notice %></p>

<h1>Ordenes</h1>

<table class="table table-bordered" >
  <thead>
    <tr class="danger">
      <th>Numero orden</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ordens.each do |orden| %>
      <tr class="success">
        <td><%= orden.numero_orden %></td>
        <td><%= orden.fecha %></td>
        <td><%= link_to 'Show', orden %></td>
        <td><%= link_to 'Edit', edit_orden_path(orden) %></td>
        <td><%= link_to 'Destroy', orden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

