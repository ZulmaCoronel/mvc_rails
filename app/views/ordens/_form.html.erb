<%= form_with(model: orden, local: true) do |form| %>
  <% if orden.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(orden.errors.count, "error") %> prohibited this orden from being saved:</h2>

      <ul>
      <% orden.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :numero_orden , :class=>"numero"%>
    <%= form.number_field :numero_orden %>
  </div>

  <div class="field">
    <%= form.label :fecha ,:class=>"fechanombre" %>
    <%= form.date_select :fecha %>
  </div>

